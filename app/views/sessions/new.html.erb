<h1>Sign In</h1>

<% form_tag session_path do %>
  <p>
    <%= label_tag 'login', "Login:" %>
    <%= text_field_tag 'login', @login %>
  </p>

  <p>
    <%= label_tag 'password', "Password:" %>
    <%= password_field_tag 'password', nil %>
  </p>

  <p>
    <%= check_box_tag 'remember_me', '1', @remember_me %>
    <%= label_tag 'remember_me', 'Remember me' %>
  </p>

  <p>
    <%= submit_tag 'Sign In' %>
  </p>
<% end -%>

<script type="text/javascript">
  var login = new LiveValidation('login');
  var password = new LiveValidation('password');

  login.add(Validate.Presence, { failureMessage: "How will you sign in without login? :p" })
  password.add(Validate.Presence, { failureMessage: "Won't you tell me your password?" })
</script>